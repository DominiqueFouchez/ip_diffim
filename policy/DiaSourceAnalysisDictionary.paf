#<?cfg paf dictionary ?>

definitions: {
    srcBadMaskPlanes: {
        type: string
        description: "Mask planes that lead to an invalid detection.
            Options: EDGE SAT BAD CR INTRP
            E.g. : EDGE SAT BAD allows CR-masked and interpolated pixels"
        default: "EDGE" "SAT" "BAD"
    }

    fBadPixels: {
        type: double
        description: "Fraction of bad pixels allowed in footprint"
        maxOccurs: 1
        default: 0.1
    }    
  
    fluxPolarityRatio: {
        type: double
        description: "Minimum fraction of flux in correct-polarity pixels"
        maxOccurs: 1
        default: 0.75
    }   

    nPolarityRatio: {
        type: double
        description: "Minimum fraction of correct-polarity pixels in unmasked subset"
        maxOccurs: 1
        default: 0.7
    }   

    nMaskedRatio: {
        type: double
        description: "Minimum fraction of correct-polarity unmasked to masked pixels"
        maxOccurs: 1
        default: 0.6
    }   
    
    nGoodRatio: {
        type: double
        description: "Minimum fraction of correct-polarity unmasked to all pixels"
        maxOccurs: 1
        default: 0.5
    }   
}