#<?cfg paf policy ?>
target: lsst.ip.diffim.TemplateBBoxStage

definitions: {
    # Required entries
    scienceExposureName: {
        type: "string"
        description: "name of science exposure on clipboard"
        default: scienceExposure
        minOccurs: 1
        maxOccurs: 1
    }
    templateDimensionsName: {
        type: "string"
        description: "name of dimensions of template exposure on clipboard"
        default: "templateDimensions"
        minOccurs: 1
        maxOccurs: 1
    }
    templateWcsName: {
        type: "string"
        description: "name of WCS of template exposure on clipboard"
        default: "templateWcs"
        minOccurs: 1
        maxOccurs: 1
    }

    # Optional entries
    borderWidth: {
        type: "int"
        description: "width of border of template bounding box"
        default: 20
        minOccurs: 0
        maxOccurs: 1
    }
}
